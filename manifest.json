{
  "manifest_version": 3,
  "name": "Rainbow Recorder — Robust Capture",
  "version": "0.7.0",
  "description": "입력/메뉴/라우팅을 수집하고, 재생 친화 CSV로 내보냅니다. (로케이터/컨텍스트/후행신호/네트워크 강화)",
  "permissions": [
    "storage",
    "webNavigation",
    "webRequest",
    "alarms",
    "downloads",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": { "default_title": "Export CSV (DB+Context)" },
  "commands": {
    "export-csv": {
      "suggested_key": { "default": "Ctrl+Shift+E", "mac": "Command+Shift+E" },
      "description": "Export az_db_rows CSV"
    }
  }
}
