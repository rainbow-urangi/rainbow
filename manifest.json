{
  "manifest_version": 3,
  "name": "MV3 Event Recorder (MVP)",
  "version": "0.0.1",
  "description": "DOM 입력 이벤트를 수집해 배치 전송합니다.",
  "permissions": ["storage", "webNavigation", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "action": { "default_title": "Recorder" }
}
